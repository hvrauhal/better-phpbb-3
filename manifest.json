{
  "manifest_version": 2,
  "name": "Better phpbb 3.1",
  "version": "1.5",
  "description": "Provides a link to topics in background tabs. Improves the short links -displayment. Hides the top bar logo.",
  "permissions": ["tabs"],
  "background": {"scripts": ["background.js"]},
  "content_scripts": [
    {
      "matches": ["*://*/*search.php*","*://*/*index.php*","*://*/*viewforum.php*","*://*/*viewtopic.php*","*://*/foorumi/"],
      "css" : ["content.css"],
      "js" : ["jquery.js","content.js"]
    }
  ]
}
